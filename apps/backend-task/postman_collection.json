                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"description\": \"Fix critical bug\",\n    \"due_date\": \"2024-12-31T00:00:00.000Z\",\n    \"status\": \"OPEN\",\n    \"assigneeId\": \"REPLACE_WITH_USER_ID\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/tasks",
