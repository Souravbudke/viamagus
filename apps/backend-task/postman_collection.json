                        "url": {
                            "raw": "{{base_url}}/tasks/REPLACE_WITH_TASK_ID",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "tasks",
                                "REPLACE_WITH_TASK_ID"
